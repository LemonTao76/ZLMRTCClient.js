{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "ENV": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", {
      // This line is part of the MIT license.
      "ignorePattern": "The above copyright notice and this permission notice shall be included in all",
      // Some lines for JSDoc is longer than 80.
      "ignoreComments": true,
      "code":140
    }],
    "no-unused-vars": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}